

<%include partials/website_header.ejs%>
  <link href="../../css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection">
  <link href="../../css/style.css" type="text/css" rel="stylesheet" media="screen,projection">
  <link href="../../css/materialize-social.css" type="text/css" rel="stylesheet"></link>
  <link rel="stylesheet" type="text/css" href="../../css/courses-list.css">


<main>
  <div class="container">
    <div class="row">
      <div class="col s3">
        <h5 class="center-align">FILTERS</h5>
        <br>
        <form action="">
            <div class="input-field">
              <select>
                <option value="" disabled selected>Choose your option</option>
                <option value="1">Option 1</option>
                <option value="2">Option 2</option>
                <option value="3">Option 3</option>
              </select>
              <label>Select Stream</label>
            </div>
            <br>
            <div class="input-field">
                <select>
                  <option value="" disabled selected>Choose your option</option>
                  <option value="1">Option 1</option>
                  <option value="2">Option 2</option>
                  <option value="3">Option 3</option>
                </select>
                <label>Select Class</label>
              </div>
              <br>
              <div class="input-field">
                  <select>
                    <option value="" disabled selected>Choose your option</option>
                    <option value="1">Option 1</option>
                    <option value="2">Option 2</option>
                    <option value="3">Option 3</option>
                  </select>
                  <label>Select Center</label>
                </div>
        </form>
      </div>
      <div class="col s9">
        <h5>List of Courses</h5>
        <%if(foundCourses){%>

        <%foundCourses.forEach((course,i)=>{%>
          <div class="row">
            <div class="col s12 m12">

                <div class="card horizontal" id="course-list-card">
                  <div class="card-image valign-wrapper">
                    <img src="/courseImages/<%=course.courseImage%>" class="responsive-img">
                  </div>
                  <div class="card-stacked">


                    <div class="card-content">
                      <div class="card-title"><%=course.courseName%></div>
                      <p class="truncate"><%=course.courseName%></p>
                    </div>
                    <div class="card-action">
                      <a href="/courses-list/?title=<%=course.courseName%>">Read more...</a>
                    </div>
                  </div>
                </div>
              </div>
          </div>
        <%})%>
        <%}%>




      </div>
    </div>
  </div>
</main>

  <%include partials/website_footer.ejs%>


    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="../../js/materialize.js"></script>
<script>
  $(function(){
    $('select').material_select();
  })
</script>
