<% include partials/header.ejs%>

	<!-- <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet"> -->
	<link rel="stylesheet" href="/css/newBlog.css">
	<main>

		<ul id="slide-out-image" class="side-nav">


			<li>
				<a href="#!">John Doe</a>
			</li>
			<li>
				<a href="#!">jdandturk@gmail.com</a>
			</li>

			<li class="media-item z-depth-3">
				<div class="file-field input-field">
					<div class="btn file-btn" id="file-input-btn">
						<span>Add Pictures</span>
						<input id="files" type="file" name="files[]" multiple />
					</div>
					<div class="file-path-wrapper">
						<input class="file-path validate" type="text">
					</div>
				</div>
				<div id="img-to-upload" class="center"></div>
		</ul>

		<div class="section">
			<div class="container">
				<form method="post" id="editForm" class="newBlogForm" enctype="multipart/form-data" action="/admin/blog" method="post">
					<div class="input-field">
						<input id="blog_title" type="text" name="title" value="<%=blogTitle%>" required class="validate">
						<label for="blog_title">Blog Title</label>
					</div>
					<div class="input-field">
						<input id="blog_url" type="text" name="url" value="<%=url%>" required class="validate">
						<label for="blog_url">Blog Url</label>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<textarea id="meta" name="meta" class="materialize-textarea"><%=meta%></textarea>
							<label for="meta">Meta tags</label>
						</div>
					</div>
					<div class="input-field col s12">
						<select name="category" id="category" required class="validate" value="<%=category%>">
							<option value="" disabled selected>Choose the category</option>
							<option value="motivational">Motivational</option>
							<option value="college-and-admission">College and Admission</option>
							<option value="Tips-and-Tricks">Tips and Tricks</option>
							<option value="about-harvin">About harvin</option>
						</select>
					</div>
					<div class="file-field input-field">
						<div class="btn file-btn">
							<span>File</span>
							<input type="file" name="userFile">
						</div>
						<div class="file-path-wrapper">
							<input class="file-path validate" type="text">
						</div>
					</div>
					<div class="row">
						<div class="col l4 m4 s4">
							<input type="checkbox" name="draft" class="filled-in" id="draft" checked="checked" />
							<label for="draft">Draft</label>
						</div>
						<div class="col l4 m4 s4 center">
							<input type="checkbox" name="publish" class="filled-in" id="publish" />
							<label for="publish">Publish</label>
						</div>
						<div class="col l4 m4 s4 right-align">
							<input type="checkbox" class="filled-in" id="auto-save" checked="checked" />
							<label for="auto-save">Auto-Save</label>
						</div>
					</div>
					<input type="hidden" id="editordata" value="default valueeeee" name="editordata">

					<div class="row">
						<div class="center-align">
							<button class="btn" id="submit-button">Submit</button>
						</div>
					</div>
				</form>

				<div class="row">
					<div class="col s12">
						<div id="editor1" contenteditable="true">
							<%if(!content){%>
								<h4>Write your blog here...</h4>
								<%}else{%>
									<%-content%>
										<%}%>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
			<a href="#" data-activates="slide-out-image" data-position="top" data-delay="50" data-tooltip="Media" class="button-collapse-image tooltipped btn-floating btn-large waves-effect waves-light">
				<i class="material-icons">collections</i>
			</a>
		</div>

	</main>

	<% include partials/footer.ejs%>


		<script src="/ckeditor/ckeditor.js"></script>

		<script src="/socket.io/socket.io.js"></script>
		<script src="/js/socket-config.js" charset="utf-8"></script>
		<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
		<script src="/js/blogInsert.js"></script>
		<script src="/dist/clipboard.min.js"></script>

		<script>
			$(function () {
				if (!window.blogInsert) {
					alert('Something went wrong !!!, Please refresh your browser')
				}

				// auto selecting category of blog
				$('[name=category]').val($('[name=category]').attr('value'));
				$('select').material_select();
			})
		</script>