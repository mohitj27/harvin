<% include partials/header.ejs %>
  <main>
    <div class="container">
      <h2 class="center-align">Center sign up</h2>
      <hr>
      <br>
      <div>
        <form action="/admin/signup" method="post" class="center-align">
          <div class="row">
            <div class="input-field col s4 offset-s4">
              <input required id="username" name="username" type="text" class="validate">
              <label for="username">Name of Center / Branch</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s4 offset-s4">
              <input required type="password" name="password" id="password">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s4 offset-s4">
              <select  multiple name="role" id="role">
                <option value="" disabled selected>Choose Your Role</option>
                <option value="admin">Admin</option>
                <option value="centre">Centre</option>
              </select>
              <label>Role / Access Rights for this center</label>
            </div>
          </div>

          <div class="center-align">
            <button type="submit" class="btn">Sign Up
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>

    </div>
  </main>
  <% include partials/footer.ejs %>
