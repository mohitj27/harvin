<% include partials/header.ejs%>
<% include partials/includeBS.ejs%>

	<h1 style="text-align: center">Edit exam: <b> <i><%= exam.examName%></i> </b> </h1>

	<div class="container">
		<div style="width: 50%; margin:25px auto;">
			<form action="/exams/<%=exam._id%>?_method=put" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="examName" class="col-sm-3 control-label">Exam Name</label>
					<div class="col-sm-9">
						<input required name="examName" type="text" class="form-control" id="examName" placeholder="Give Exam name" value="<%=exam.examName%>">
					</div>
				</div>
				<div class="form-group">
					<label for="examDate" class="col-sm-3 control-label">Exam Date</label>
					<div class="col-sm-9">
						<input required name="examDate" type="datetime" data-field="datetime" id="examDate" class="form-control" placeholder="Click to choose Date and Time" value="<%=exam.examDate%>">
						<div id="dtBox"></div>
					</div>
                </div>
                <div class="form-group">
                    <label for="examType" class="col-sm-3 control-label">Exam Type</label>
                    <div class="col-sm-1">
                        <select data-live-search="true" title="Choose the Type of exam" required class="selectpicker show-tick" name="examType" id="examType">
                            
                            <option value="True - False"
                                <%if(exam.examType == "True - False"){%>
                                    selected
                                <%}%>
                            >True - False</option>
                            <option value="MCQ- Only 1 correct"
                                <%if(exam.examType == "MCQ- Only 1 correct"){%>
                                    selected
                                <%}%>
                            >MCQ- Only 1 correct</option>
                            <option value="MCQ- More than 1 correct"
                                <%if(exam.examType == "MCQ- More than 1 correct"){%>
                                    selected
                                <%}%>
                            >MCQ- More than 1 correct</option>
                            <option value="Mixed"
                                <%if(exam.examType == "Mixed"){%>
                                    selected
                                <%}%>
                            >Mixed</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="forBatch" class="col-sm-3 control-label">For Batch</label>
                    <div class="col-sm-1">
                        <select data-live-search="true" title="Choose the Batch" required class="selectpicker show-tick"  name="batchName" id="forBatch">
                            <%batches.forEach(function (batch) {%>
                                <option value="<%=batch._id%>"
                                    <% if(exam.batch){ %>
                                            <%if(exam.batch._id.toString() == batch._id.toString()){%>
                                                selected
                                    <%}%>
                                    <% }else{ %>

                                    <%}%>

                                ><%=batch.batchName%></option>
                            <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="totalTime" class="col-sm-3 control-label">Total time (in Minutes) </label>
                    <div class="col-sm-9">
                        <input required name="totalTime" type="number" class="form-control" id="totalTime" placeholder="Total available time ( in Minutes ) for exam" value="<%=exam.totalTime%>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="posMarks" class="col-sm-3 control-label">Positive Marks</label>
                    <div class="col-sm-9">
                        <input required name="posMarks" type="number" class="form-control" id="posMarks" placeholder="Positive marks ? If answered correctly" value="<%=exam.positiveMarks%>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="negMarks" class="col-sm-3 control-label">Negative Marks</label>
                    <div class="col-sm-9">
                        <input required name="negMarks" type="number" class="form-control" id="negMarks" placeholder="Negative marks ? If answered incorrectly" value="<%=exam.negativeMarks%>">
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxMarks" class="col-sm-3 control-label">Maximum Marks</label>
                    <div class="col-sm-9">
                        <input autofocus required name="maxMarks" type="number" class="form-control" id="maxMarks" placeholder="Maximum marks allowed for this exam" value="<%=exam.maximumMarks%>">
                    </div>
                </div>
                <input type="submit" class="btn  ">
			</form>
		</div>
	</div>

	<% include partials/footer.ejs%>

