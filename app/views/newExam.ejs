<% include partials/header.ejs%>
	<h1 style="text-align: center">Set A New Exam</h1>

	<div class="container">
		<div style="width: 50%; margin:25px auto;">
			<form action="/exams" method="post" class="form-horizontal">
				<div class="form-group">
					<label for="examName" class="col-sm-3 control-label">Exam Name</label>
					<div class="col-sm-9">
						<input autofocus required name="examName" type="text" class="form-control" id="examName" placeholder="Give Exam name">
					</div>
				</div>
				<div class="form-group">
					<label for="examDate" class="col-sm-3 control-label">Exam Date</label>
					<div class="col-sm-9">
						<input autofocus required name="examDate" type="datetime" data-field="datetime" id="examDate" class="form-control" placeholder="Click to choose Date and Time">
						<div id="dtBox"></div>
					</div>
                </div>
                <div class="form-group">
                    <label for="examType" class="col-sm-3 control-label">Exam Type</label>
                    <div class="col-sm-9">
                        <select data-live-search="true" title="Choose the Type of exam" required  class="selectpicker form-control" name="examType" id="examType">
                            <option value="True - False">True - False</option>
                            <option value="MCQ- Only 1 correct">MCQ- Only 1 correct</option>
                            <option value="MCQ- More than 1 correct">MCQ- More than 1 correct</option>
                            <option value="Mixed">Mixed</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="forBatch" class="col-sm-3 control-label">For Batch</label>
                    <div class="col-sm-9">
                        <select data-live-search="true" title="Choose the Batch" required  class="selectpicker form-control" name="batchName" id="forBatch">
                            <%batches.forEach(function (batch) {%>
                                <option value="<%= batch._id %>"><%= batch.batchName %></option>
                            <%})%>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="totalTime" class="col-sm-3 control-label">Total time (in Minutes) </label>
                    <div class="col-sm-9">
                        <input autofocus required name="totalTime" type="number" class="form-control" id="totalTime" placeholder="Total available time ( in Minutes ) for exam">
                    </div>
                </div>
                <div class="form-group">
                    <label for="posMarks" class="col-sm-3 control-label">Positive Marks</label>
                    <div class="col-sm-9">
                        <input autofocus required name="posMarks" type="number" class="form-control" id="passMarks" placeholder="Positive marks ? If answered correctly">
                    </div>
                </div>
                <div class="form-group">
                    <label for="negMarks" class="col-sm-3 control-label">Negative Marks</label>
                    <div class="col-sm-9">
                        <input autofocus required name="negMarks" type="number" class="form-control" id="negMarks" placeholder="Negative marks ? If answered incorrectly">
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxMarks" class="col-sm-3 control-label">Maximum Marks</label>
                    <div class="col-sm-9">
                        <input autofocus required name="maxMarks" type="number" class="form-control" id="maxMarks" placeholder="Maximum marks allowed for this exam">
                    </div>
                </div>
                <input type="submit" class="btn btn-primary">
			</form>
		</div>
	</div>

	<% include partials/footer.ejs%>

