<meta charset="UTF-8">
<title>Harvin Academy</title>
<script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
<meta name="viewport" content="width=device-width">


<!-- Compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="/dist/DateTimePicker.min.js" type="text/javascript"></script>
<script src="/js/newVms.js" type="text/javascript"></script>
<link href="/css/newVms.css" type="text/css" rel="stylesheet"></link>
<link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">


<body>
	<nav class="no-pad z-depth-0">
		<h2>HARVIN ACADEMY</h2>
	</nav>
	<main>
		<div class="section no-pad">

			<div class="container center">
				<div class="row center-align main-row">
					<div class="col s12 m6 push-m3 push-l3">

						<form action="/vms" method="post">
							<div class="row input-field">
								<input id="name" name="name" type="text" required class="validate" />
								<label for="name">
										<span class="label-text">Full Name</span>
										<span class="nav-dot"></span>
									</label>
							</div>
							<div class="row input-field">
								<select id="classs" type="text" required name="classs" data-alignment="right" class="validate">
									<option value="" disabled selected>Choose your option</option>
										 <option value="IX">IX</option>
										 <option value="X">X</option>
										 <option value="XI">XI</option>
										 <option value="XII">XII</option>
										 <option value="XII-Pass">XII-Pass</option>
									 </select>
								<label for="classs">Class</label>
							</div>
							<div class="row input-field">
								<input id="phone" name="phone" type="number" min="1111111111" max="9999999999" required class="validate" />
								<label for="phone">
										<span class="label-text">Phone</span>
										<span class="nav-dot"></span>
									</label>
							</div>
							<div class="row input-field">
								<input id="emailId" name="emailId" type="email" required class="validate" />
								<label for="emailId">
										<span class="label-text">Email</span>
										<span class="nav-dot"></span>
									</label>
							</div>

							<div class="row input-field">
								<input id="address" name="address" type="text" required class="validate" />
								<label for="address">
										<span class="label-text">Address</span>
										<span class="nav-dot"></span>
									</label>
							</div>



							<div class="row input-field">
								<select name="referral" id="referral-select" required class="validate">
									<option value="" disabled selected>Choose your option</option>
									<option value="Friends">Friends</option>
									<option value="Social media">Social media</option>
									<option value="Direct">Direct</option>
									<option value="Other">Other</option>
								</select>
								<label>Referral</label>
							</div>

							<div class="row input-field"  style="display: none;">
								<input id="referral-text" type="text" class="validate" />
								<label for="referral">
										<span class="label-text">Referral</span>
										<span class="nav-dot"></span>
									</label>
							</div>

							<div class="row input-field">
								<input id="school" name="school" type="text" required class="validate" />
								<label for="school">
										<span class="label-text">School</span>
										<span class="nav-dot"></span>
									</label>
							</div>

							<div class="row input-field">
								<input id="aim" name="aim" type="text" required class="validate"/>
								<label for="aim">
										<span class="label-text">Aim</span>
										<span class="nav-dot"></span>
									</label>
							</div>

							<div class="row input-field">
								<textarea id="comments" name="comments" class="materialize-textarea validate"></textarea>

								<label for="comments">
										<span class="label-text">Comments</span>
										<span class="nav-dot"></span>
									</label>
							</div>
							<div class="row center">

								<button class="btn">Submit</button>

							</div>

						</form>
					</div>
				</div>
			</div>
		</div>

		</div>

	</main>
	<% if(msg_error && msg_error.length > 0){ %>
		<span id="error-card">
					<%=msg_error%>
				</span>
		<% } %>

			<% if(msg_success && msg_success.length > 0){ %>

				<span id="success-card">
							<%=msg_success%>
						</span>

				<% } %>
</body>

<script src="/js/main.js" charset="utf-8"></script>

</html>
