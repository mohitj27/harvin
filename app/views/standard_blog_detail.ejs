                        </div>
                    </div>

                    <!-- ================= //Comment Area ================= -->
                    <!-- ================= Releted post ================= -->
                    <div class="releted-post">
                        <h2 class="widget-title">RELATED POST</h2>
                        <div class="row align-items-end">
                            <%foundBlogs.forEach(function(blog){%>
                                <!-- Single Blog -->
                                <article class="card single-blog text-center border-0 mb-3 mb-lg-0 col l3 offset-l1 col s6" id="related-post-card">
                                    <a href="/blog/?title=<%=blog.blogTitle%>">
                                        <h3 class="card-title">
                                            <%=blog.blogTitle%>
                                        </h3>
                                        <!-- Blog Content-->
                                        <div class="blgo-content">
                                            <img class="card-img rounded-0" src="/blogImage/<%=blog.coverImgName%>" alt="Blog Image">
                                            <span class="posted-date">
                                                <%=blog.uploadDate%>
                                            </span>
                                        </div>
                                    </a>
                                </article>
                                <!-- //Single Blog -->
                                <%})%>
                        </div>
                    </div>
