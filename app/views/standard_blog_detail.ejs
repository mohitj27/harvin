    <div id="fb-root"></div>
    <script>
        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s);
            js.id = id;
            js.src =
                'https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.12&appId=1054614874673150&autoLogAppEvents=1';
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));
    </script>

    <!-- twitter scripts -->
    <script>
        window.twttr = (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0],
                t = window.twttr || {};
            if (d.getElementById(id)) return t;
            js = d.createElement(s);
            js.id = id;
            js.src = "https://platform.twitter.com/widgets.js";
            fjs.parentNode.insertBefore(js, fjs);

            t._e = [];
            t.ready = function (f) {
                t._e.push(f);
            };

            return t;
        }(document, "script", "twitter-wjs"));
    </script>

    <div class="middle-content pt-50">
        <div class="container-fluid">
            <div class="row">
                <!-- ====================== Main .blog-area ====================== -->
                <main class="col-xl-9 col-lg-8 col-md-7 blog-details-area blog-area">
                    <div class="section">
                        <div id="content" class="container">
                        </div>
                    </div>

                    <!-- ================= Full Post ================= -->
                    <article class="card full-post border-0">
                        <!-- <mark class="catagory text-center">Life Style</mark> -->
                        <h2 class="card-title text-center h1 p-5">
                            <%=foundBlog.blogTitle%>
                        </h2>
                        <!-- Blog Content-->
                        <div class="blgo-content">
                            <img class="card-img rounded-0" src="/blogImage/<%=foundBlog.coverImgName%>" alt="Blog Image">
                            <span class="posted-date">
                                <%=foundBlog.uploadDate%>
                            </span>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body blog-texts p-5">
                            <% if(foundBlog.author){ %>
                                <span class="posted-by mt-20 mb-20 d-block">Posted By
                                    <mark class="admin">
                                        <%=foundBlog.author.username%>
                                    </mark>
                                </span>

                                <%}%>

                                    <%-blogContent%>

                                    <br><br>
                                    <div class="col-xs-12 col-lg-12 col-md-12 center">
                                            <h3>Liked this blog? Share with your friends</h3>
                                            <span class="fb-share-button" data-href="https://harvin.academy/blog/?title=WHY%20CHOOSE%20HARVIN?" data-layout="button_count">
                                            </span>
                                            <a class="twitter-share-button" href="https://twitter.com/intent/tweet">
                                                Tweet</a>
                                        </div>

                    </article>
                    <!-- ================= /Full Post ================= -->
