<% include partials/header.ejs %>
	<main>
		<div class="container">
			<h3 style="text-align: center">List of all visitors</h3>
			<hr>
			<table class="responsive-table centered highlight bordered" width="100%">
				<thead>
					<tr>
						<th style="text-align: center">Serial no.</th>
						<th style="text-align: center">Date</th>
						<th style="text-align: center">Name</th>
						<th style="text-align: center">Class</th>
						<th style="text-align: center">Contact</th>
						<th style="text-align: center">Email Id</th>
						<th style="text-align: center">Referral</th>
					</tr>
				</thead>
				<tbody>
					<% if (visitors){ %>
						<% visitors.forEach((visitor, i) =>{ %>
							<tr  >
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= i + 1 %>
								</td>
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.date %>
								</td>
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.name %>
								</td>
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.classs %>
								</td>
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.phone %>
								</td>
								<td style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.emailId %>
								</td>
								<td id="referral" style="text-align: center" href="#modal-comment" class="modal-trigger">
									<%= visitor.referral %>
								</td>
								<td id="comments" class="vms-table-text" style="text-align: center" href="#modal-comment" class="modal-trigger">
									<p>
										<%=visitor.comments%>
									</p>
								</td>
								<td id="school" class="vms-table-text" style="text-align: center" href="#modal-comment" class="modal-trigger">
									<p>
										<%=visitor.school%>
									</p>
								</td>
								<td id="address" class="vms-table-text" style="text-align: center" href="#modal-comment" class="modal-trigger">
									<p >
										<%=visitor.address%>
									</p>
								</td>
								<td id="aim" class="vms-table-text" style="text-align: center" href="#modal-comment" class="modal-trigger">
									<p >
										<%=visitor.aim%>
									</p>
								</td>
								<td style="text-align: center">
									<form method="post" action="/<%=visitor._id%>?_method=delete">
										<button type="submit" class="btn red"><i class="material-icons ">delete_forever</i></button>
									</form>
								</td>
							</tr>
							<% }) %>
								<% } %>
				</tbody>
			</table>
			<div id="modal-comment" class="modal center-align">
				<div class="modal-content">
					<h4>Visitor Info</h4>
				</div>
				<div class="modal-footer">
					<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
				</div>
			</div>
		</div>


	</main>
	<script src="/js/visitor.js" charset="utf-8"></script>
	<% include partials/footer.ejs %>
