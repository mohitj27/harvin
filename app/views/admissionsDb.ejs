<% include partials/header.ejs%>

	<link rel="stylesheet" href="/css/admissionsDb.css">
	<main>
		<div class="section">
			<div class="container">
				<h3 style="text-align: center">List of all Admissions</h3>
				<hr>
				<table class="responsive-table centered highlight bordered" width="100%">
					<thead>
						<tr>
							<th style="text-align: center">Serial no.</th>
							<th style="text-align: center">Date</th>
							<th style="text-align: center">Name</th>
						</tr>
					</thead>
					<tbody>
						<% if (admissions){ %>
							<% admissions.forEach((admission, i) =>{ %>
								<tr class="hoverable" id="<%=admission._id%>">
									<td style="text-align: center">
										<%= i + 1 %>
									</td>
									<td style="text-align: center">
										<%=admission.date.toLocaleDateString()%>
									</td>
									<td style="text-align: center">
											<%=admission.name%>
										</a>
									</td>


								</tr>
								<% }) %>
									<% } %>
					</tbody>
				</table>
			</div>
		</div>

	</main>



