
<% include partials/header.ejs%>

		<!-- <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet"> -->
		<link rel="stylesheet" href="/css/newCourse.css">
		<main>



			<div class="section">
				<div class="container">
          <h3 class="center">Add a Course</h3>
					<form method="post" class="newBlogForm" enctype="multipart/form-data" action="/admin/courses" method="post">

						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseName" required class="validate">
								<label for="first_name">Course Name</label>
							</div>
						</div>
						<div class="row">
							<div class="file-field input-field">
								<div class="btn file-btn">
									<span>File</span>
									<input type="file" name="courseImage" required>
								</div>
								<div class="file-path-wrapper">
									<input class="file-path validate" placeholder="Course Image" type="text">

								</div>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="classTimings" required class="validate">
								<label for="first_name">Class Timings</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseStartingFrom" required class="datepicker">
								<label for="first_name">Course Starting from</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseFrequency" required class="validate">
								<label for="first_name">Course Frequency</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseDescription" required class="validate">
								<label for="first_name">Course Description</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseFor" required class="validate">
								<label for="first_name">Course For</label>
							</div>
						</div>
						<div class="row">
							<div class="input-field">
								<input id="blog_title" type="text" name="courseAdmissionThrough" required class="validate">
								<label for="first_name">Course Admission Through</label>
							</div>
						</div>


						<div class="row">
							<div class="center-align">
								<button class="btn" id="submit-button">Submit</button>
							</div>
						</div>
					</form>

					<div class="row">
						<div class="col s12">
							<div id="editor1" contenteditable="true">

							</div>
						</div>
					</div>
				</div>
			</div>


		</main>


		<script src="/js/courseInsert.js"></script>

		<% include partials/footer.ejs%>
