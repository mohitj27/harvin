
<% include partials/header.ejs%>

		<!-- <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.9/summernote.css" rel="stylesheet"> -->
		<link rel="stylesheet" href="/css/newCourse.css">
		<main>



			<div class="section">
				<div class="container">
          <h3 class="center">Add a Course</h3>
					<form method="post" class="newBlogForm" enctype="multipart/form-data" action="/admin/blog" method="post">
						<div class="input-field">
							<input id="blog_title" type="text" name="title" required class="validate">
							<label for="first_name">Blog Title</label>
						</div>
						<div class="file-field input-field">
							<div class="btn file-btn">
								<span>File</span>
								<input type="file" name="userFile" required>
							</div>
							<div class="file-path-wrapper">
								<input class="file-path validate" placeholder="" type="text">
                <label for="userFile">Course Image</label>

							</div>
						</div>
						<div class="row">
							<div class="col l4 m4 s4">
								<input type="checkbox" name="draft" class="filled-in" id="draft" checked="checked" />
								<label for="draft">Draft</label>
							</div>
							<div class="col l4 m4 s4 center">
								<input type="checkbox" name="publish" class="filled-in" id="publish"  />
								<label for="publish">Publish</label>
							</div>
							<div class="col l4 m4 s4 right-align">
								<input type="checkbox" class="filled-in" id="auto-save" checked="checked" />
								<label for="auto-save">Auto-Save</label>
							</div>
						</div>
						<input type="hidden" id="editordata" value="defalut valueeeee" name="editordata">

						<div class="row">
							<div class="center-align">
								<button class="btn" id="submit-button">Submit</button>
							</div>
						</div>
					</form>

					<div class="row">
						<div class="col s12">
							<div id="editor1" contenteditable="true">

							</div>
						</div>
					</div>
				</div>
			</div>


		</main>


		<script src="/js/courseInsert.js"></script>

